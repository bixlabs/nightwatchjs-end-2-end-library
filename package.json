{
  "name": "nightwatchjs-end2end",
  "version": "4.0.2",
  "description": "It provides the initial configuration to start implementing end2end tests for your web apps with NightwatchJS.",
  "engines": {
    "node": ">= 16.15.0"
  },
  "scripts": {
    "postinstall": "node configuration.js"
  },
  "author": "Bixlabs",
  "keywords": [
    "test",
    "tests",
    "endtoend",
    "end2end",
    "nightwatchjs",
    "selenium",
    "headless",
    "browserstack"
  ],
  "license": "MIT",
  "homepage": "https://github.com/reviewsbix/strongbox-end-to-end-tests",
  "dependencies": {
    "browserstack-local": "^1.3.7",
    "find-in-files": "^0.4.0",
    "geckodriver": "^2.0.3",
    "nightwatch": "^1.2.4",
    "selenium-download": "^2.0.15",
    "xvfb-maybe": "^0.1.3"
  },
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\(/"
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true
        }
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "func-names": [
        "error",
        "as-needed"
      ]
    },
    "globals": {
      "describe": true,
      "it": true,
      "before": true,
      "beforeEach": true
    }
  }
}
